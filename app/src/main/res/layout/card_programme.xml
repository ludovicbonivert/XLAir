<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:layout_marginBottom="0dp"
    android:id="@+id/cv"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingRight="12dp"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/programme_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/programme_title"
            android:layout_toRightOf="@+id/programme_icon"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/programme_nb_broadcasts"
            android:layout_toRightOf="@+id/programme_icon"
            android:layout_below="@+id/programme_title"
            android:textStyle="italic"
            android:paddingBottom="10dp"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/programme_desc"
            android:layout_toRightOf="@+id/programme_icon"
            android:layout_below="@+id/programme_nb_broadcasts"
            android:paddingBottom="10dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>